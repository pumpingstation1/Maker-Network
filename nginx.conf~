worker_processes  4;
daemon off;

pid        /tmp/runshit/nginx.pid;

error_log /tmp/runshit/nginx_err.log;

events {
    worker_connections  1024;
    multi_accept on;
}

http {
    include       /etc/nginx/mime.types;

    access_log /tmp/runshit/nginx_acc.log;

    sendfile        on;

    keepalive_timeout  65;
    tcp_nodelay        on;

    gzip  on;
    gzip_disable "MSIE [1-6]\.(?!.*SV1)";

    server {
        listen 80;
        server_name localhost;

        location /admin/media/ {
            autoindex on;
            alias /home/eastein/pyenvs/Maker-Network/lib/python2.7/site-packages/django/contrib/admin/static/;
        }
        location /media/ {
            autoindex on;
            alias /home/eastein/git/Maker-Network/media/;
        }
        location / {
            uwsgi_pass       unix:/tmp/runshit/mkn.uwsgi.sock;
            uwsgi_param      QUERY_STRING       $query_string;
            uwsgi_param      REQUEST_METHOD     $request_method;
            uwsgi_param      CONTENT_TYPE       $content_type;
            uwsgi_param      CONTENT_LENGTH     $content_length;

            uwsgi_param      REQUEST_URI        $request_uri;
            uwsgi_param      PATH_INFO          $document_uri;
            uwsgi_param      DOCUMENT_ROOT      $document_root;
            uwsgi_param      SERVER_PROTOCOL    $server_protocol;

            uwsgi_param      REMOTE_ADDR        $remote_addr;
            uwsgi_param      REMOTE_PORT        $remote_port;
            uwsgi_param      SERVER_PORT        $server_port;
            uwsgi_param      SERVER_NAME        $server_name;

            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            root             html;
            index            index.html index.htm;
        }
    }
}
